<%- include('./head') %>
<h1><%= title %></h1>

<form method="POST">
    <div class="form-group">
        <label for="first_name">Genre:</label>
        <input id="first_name" class="form-control" type="text" placeholder="First name (Christian)" name="first_name" required 
        value=<%= ( undefined === author)? "": author.first_name %>>
        <label for="family_name">Genre:</label>
        <input id="family_name" class="form-control" type="text" placeholder="Family name (Surname)" name="family_name" required 
        value=<%= ( undefined === author)? "": author.family_name %>>
    </div>
    <div class="form-group">
        <label for="date_of_birth">Date of birth:</label>
        <input id="date_of_birth" class="form-control" type="date"  name="date_of_birth"  
        value=<%= ( undefined === author)? "": author.date_of_birth %>>
        <label for="date_of_death">Date of death:</label>
        <input id="date_of_death" class="form-control" type="date"  name="date_of_death"  
        value=<%= ( undefined === author)? "": author.date_of_death %>>
    </div>
    <button class="btn btn-primary" type="submit">Submit</button>
    <% if (errors){%>
        <ul>
            <% errors.forEach(error=>{ %>
                <li><%= error.msg %></li>
            <% })%>
        </ul>
        <%}%>
</form>
<%- include('./foot') %>