<%- include('./head') %>
<h1><%= title %></h1>

<form method="POST">
    <div class="form-group">
        <label for="name">Genre:</label>
        <input id="name" class="form-control" type="text" placeholder="Fantasy, Poetry etc." name="name" required 
        value=<%= ( undefined === genre)? "": genre.name %>>
        
        <button class="btn btn-primary" type="submit">Submit</button>
    <% if (errors){%>
        <ul>
            <% errors.forEach(error=>{ %>
                <li><%= error.msg %></li>
            <% })%>
        </ul>
        <%}%>
    </div>
</form>
<%- include('./foot') %>