<%- include('./head') %>
<h1><%= title %>: <%= genre.name %></h1>
<% if( genre_books.length){%>
<p><strong>Delete the following books before attempting to delete this genre.</strong></p>
<div style="margin-left:20px;margin-top:20px">
  <h4>Books in this genre</h4>
  <dl>
    <% genre_books.forEach(book => { %>
    <dt>
      <a href=<%=book.url%>><%=book._id%> </a>
    </dt>
    <dd>
       <%=book.title%>
    </dd>

    <% }) %>
  </dl>
</div>
<%}else{%>
<p>Do you really want to delete this Genre?</p>
<form method="POST">
  <div class="form-group">
    <input type="hidden" id="genreid" name="genreid" class="form-control" value=<%= genre._id%>>
  </div>
  <button class="btn btn-primary" type="submit">Delete</button>
</form>
<%}%>



<%- include('./foot') %>