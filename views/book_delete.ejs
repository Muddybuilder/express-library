<%- include('./head') %>
<h1><%= title %>: <%= book.title %></h1>
<% if( book_instances.length){%>
<p><strong>Delete the following book instances before attempting to delete this book.</strong></p>
<div style="margin-left:20px;margin-top:20px">
  <h4>Book Instances</h4>
  <dl>
    <% book_instances.forEach(instance => { %>
    <dt>
      <a href=<%=instance.url%>><%=instance.imprint%> </a>
    </dt>
    <dd>
       <%=instance.status%>
    </dd>

    <% }) %>
  </dl>
</div>
<%}else{%>
<p>Do you really want to delete this Book?</p>
<form method="POST">
  <div class="form-group">
    <input type="hidden" id="bookid" name="bookid" class="form-control" value=<%= book._id%>>
  </div>
  <button class="btn btn-primary" type="submit">Delete</button>
</form>
<%}%>



<%- include('./foot') %>